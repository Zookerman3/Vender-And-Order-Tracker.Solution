@{
  Layout = "_Layout";
}

@using Tracker.Models;

<h3>Here are all the orders for this vendor:</h3>
@if (@Model["orders"].Count == 0)
  {
    <h3>No orders have been added yet!</h3>
  } 
  else 
  {
    <h4>Here are all the Orders for this @Model["vendor"].Name:</h4>
  <ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title : @order.Date</a></li>
  }
  </ol>
  }
<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>
